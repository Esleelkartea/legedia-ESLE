		}

		if ($criteria->containsKey(ItemBasePeer::ID_ITEM_BASE) && $criteria->keyContainsValue(ItemBasePeer::ID_ITEM_BASE) ) {
			throw new PropelException('Cannot insert a value for auto-increment primary key ('.ItemBasePeer::ID_ITEM_BASE.')');
		}


		// Set the correct dbName
		$criteria->setDbName(self::DATABASE_NAME);

		try {
			// use transaction because $criteria could contain info
			// for more than one table (I guess, conceivably)
			$con->beginTransaction();
			$pk = BasePeer::doInsert($criteria, $con);
			$con->commit();
