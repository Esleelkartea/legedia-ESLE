	/**
	 * Retrieve a single object by pkey.
	 *
	 * @param      int $pk the primary key.
	 * @param      PropelPDO $con the connection to use
	 * @return     ItemBase
	 */
	public static function retrieveByPK($pk, PropelPDO $con = null)
	{

		if (null !== ($obj = ItemBasePeer::getInstanceFromPool((string) $pk))) {
			return $obj;
		}

		if ($con === null) {
			$con = Propel::getConnection(ItemBasePeer::DATABASE_NAME, Propel::CONNECTION_READ);
		}

		$criteria = new Criteria(ItemBasePeer::DATABASE_NAME);
		$criteria->add(ItemBasePeer::ID_ITEM_BASE, $pk);

		$v = ItemBasePeer::doSelect($criteria, $con);

		return !empty($v) > 0 ? $v[0] : null;
	}

